{
  "compilerOptions": {
    "rootDir": "../dist.tmp",
    "target": "ES2022",
    "lib": ["es2022", "DOM", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@base/*": ["../dist.tmp/base/*"],
      "@sdk/*": ["../dist.tmp/sdk/*"],
      "@fhevm-ethers/*": ["../dist.tmp/ethers/*"],
      "@fhevm-viem/*": ["../dist.tmp/viem/*"],
      "@fhevm-base/*": ["../dist.tmp/fhevm-base/*"],
      "@fhevm-base-types/*": ["../dist.tmp/fhevm-base-types/*"],
      "@relayer/*": ["../dist.tmp/relayer/*"],
      "*": ["*"]
    }
  },
  "include": ["../dist.tmp/**/*.d.ts"],
  "exclude": ["../node_modules"]
}
