{
  "compilerOptions": {
    "rootDir": "../dist.tmp",
    "target": "ES2022",
    "lib": ["es2022", "DOM", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@base/*": ["../dist.tmp/base/*"],
      "@sdk/*": ["../dist.tmp/sdk/*"],
      "@relayer-provider/*": ["../dist.tmp/relayer-provider/*"],
      "*": ["*"]
    }
  },
  "include": ["../dist.tmp/**/*.d.ts"],
  "exclude": ["../node_modules"]
}
