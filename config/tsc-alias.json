    "baseUrl": "../dist.tmp",
    "outDir": "../dist.tmp",
    "paths": {
      "@base/*": ["./base/*"],
      "@sdk/*": ["./sdk/*"],
      "@fhevm-ethers/*": ["./ethers/*"],
      "@fhevm-viem/*": ["./viem/*"],
