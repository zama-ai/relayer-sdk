{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    //"declaration": true,
    "target": "ES2022",
    "lib": ["es2022", "DOM", "WebWorker"],
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@base/*": ["./src/base/*"],
      "@sdk/*": ["./src/sdk/*"],
      "@relayer-provider/*": ["./src/relayer-provider/*"],
      "*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test-dom.ts",
    "src/test"
  ]
}
